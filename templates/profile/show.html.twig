{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-around">
            <div class="row col-sm-4 justify-content-around">
                <h1 class="mx-4">Consultation du compte client</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                        <tr>
                            <th>Firstname</th>
                            <td>{{ user.firstname }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ user.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Birthdate</th>
                            <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a class="btn btn-primary m-4 w-25" href="{{ path('profile_index') }}">Retour Ã  la liste</a>

                <a class="btn btn-primary m-4 w-25" href="{{ path('profile_edit', {'id': user.id}) }}">Modifier</a>

                {{ include('profile/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
