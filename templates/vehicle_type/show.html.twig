{% extends 'base.html.twig' %}

{% block title %}VehicleType{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-around">
            <div class="row col-sm-4 justify-content-around">
                <h1 class="mx-4">Consultation du type de véhicule: {{ vehicle_type.name }}</h1>

                <table class="table mx-4">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ vehicle_type.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ vehicle_type.name }}</td>
                        </tr>
                        <tr>
                            <th>Volume</th>
                            <td>{{ vehicle_type.volume }}</td>
                        </tr>
                        <tr>
                            <th>Picture</th>
                            <td>{{ vehicle_type.picture }}</td>
                        </tr>
                    </tbody>
                </table>
                <img src="{{ asset('build/images/' ~ vehicle_type.picture) }}" alt="{{ vehicle_type.name }}">

                <a class="btn btn-primary m-4 w-25" href="{{ path('vehicle_type_index') }}">Retour à la liste</a>

                <a class="btn btn-primary m-4 w-25" href="{{ path('vehicle_type_edit', {'id': vehicle_type.id}) }}">Modifier</a>

                {{ include('vehicle_type/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
